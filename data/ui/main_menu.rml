<rml>
	<head>
		<link type="text/template" href="templates/dialog.rml"/>
	</head>
	<body template="dialog">
		<h1>Pioneer</h1>
		<h4 id="engine.version"/>
		<p>
			<button class="point" onclick="newgame-earth" shortcut="ctrl+1"/>New game starting on Earth<br/>
			<button class="point" onclick="newgame-eridani" shortcut="shift+2"/>New game starting on Epsilon Eridani<br/>
			<button class="point" onclick="newgame-debug" shortcut="meta+3"/>New game starting on debug point<br/>
			<button class="point" onclick="loadgame" shortcut="ctrl+shift+4"/>Load a saved game<br/>
			<button class="point" onclick="quit" shortcut="5"/>Quit
		</p>
	</body>
</rml>
